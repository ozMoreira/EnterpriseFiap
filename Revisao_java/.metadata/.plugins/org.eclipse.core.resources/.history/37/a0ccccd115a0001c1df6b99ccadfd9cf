			<property name="javax.persistence.jdbc.password" value="081085"/>
			<!-- URL do banco -->
			<property name="javax.persistence.jdbc.url" value="jdbc:oracle:thin:@oracle.fiap.com.br:1521:orcl"/>
		</properties>	
	</persistence-unit>
